{{> headerstaff}}

<div class="container mt-5">
    Task List available
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-view-service">Service price
        list </button>
    <table class="table table-light mt-2">
        <thead>
            <tr>
                <th scope="col">Room</th>
                <th scope="col">Name</th>
                <th scope="col">Note</th>
                <th scope="col">Date</th>
                <th scope="col">Price (VND)</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            {{#each jobs}}
            <tr>
                <th scope="row">{{this.room}}</th>
                <td>{{this.name}}</td>
                <td>{{this.note}}</td>
                <td>{{this.date}}</td>
                <td>{{this.price}} VND</td>
                <td>
                    <button type="button" class="btn btn-primary btn-sm btn-receipt-job" data-id="{{this._id}}"
                        data-toggle="modal" data-target="#modal-delete-job">Receive</button>
                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="modal fade" id="modal-delete-job" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Pick Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to receipt this task
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a href="#" class="btn btn-primary btn-pick-task">Receive</a>
            </div>
        </div>
    </div>
</div>

{{!-- VIEW SERVICES --}}
<div class="modal fade" id="modal-view-service" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Price list (VND)</h5>
                <div type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </div>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price (VND)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each services}}
                        <tr>
                            <th scope="row">{{@index}}</th>
                            <td>{{this.name}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.price}} (VND)</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <div type="button" class="btn btn-secondary" data-dismiss="modal">Close</div>
            </div>
        </div>
    </div>
</div>
</form>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
    integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
    crossorigin="anonymous"></script>
<script>
    let btnReceipts = document.querySelectorAll('.btn-receipt-job')
    let btnPick = document.querySelector('.btn-pick-task')
    btnReceipts.forEach(item => {
        item.onclick = (e) => {
            let id = item.getAttribute('data-id')
            btnPick.href = `/staff/pick-task/${id}`
        }
    })
</script>