{{> headerstaff}}
<div class="wrapper">

    <div class="container mt-5">
        My task
        <table class="table table-light mt-2">
            <thead>
                <tr>
                    <th scope="col">Room</th>
                    <th scope="col">Name</th>
                    <th scope="col">Note</th>
                    <th scope="col">Date</th>
                    <th scope="col">Price (VND)</th>
                    <th scope="col">#</th>
                </tr>
            </thead>
            <tbody>
                {{#each jobs}}
                <tr>
                    <th scope="row">{{this.room}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.note}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.price}} VND</td>
                    <td>
                        {{#renderStatusJob this.status this._id}}
                        <button type="button" class="btn btn-primary btn-sm btn-receipt-job" data-id="{{this._id}}"
                            data-toggle="modal" data-target="#modal-delete-job">Finish</button>
                        {{/renderStatusJob}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="modal-finish-job" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Finish Task?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    You finished this task?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <a href="#" class="btn btn-primary btn-yes">Yes</a>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    let btnFinishs = document.querySelectorAll('.btn-finish-job')
    let btnYes = document.querySelector('.btn-yes')
    btnFinishs.forEach(item => {
        item.onclick = (e) => {
            let id = item.getAttribute('data-id')
            btnYes.href = `/staff/finish-task/${id}`
        }
    })
</script>